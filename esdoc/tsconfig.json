{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "inlineSources": true,
        "inlineSourceMap": true,
        "declaration": true,
        "lib": [
            "ES2020",
            "dom"
        ],
        "moduleResolution": "Node",
        "outDir": "./dist",
        "pretty": true,
        "rootDir": "./src",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
